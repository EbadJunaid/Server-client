{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}/encode-decode.c",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-lm",
                "-lz",
                "-lmagic"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}